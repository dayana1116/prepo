-var titulo = "Sub-titulo principal"
-var titulos = ["Titulo principal","Subtitulo 1","Subtitulo 2","Subtitulo 3"]
mixin caja(imagen,titulo,contenido) 
	.caja 
		.caja__imagen: img(src="images/"+imagen)
		.caja__contenido 
			h3=titulo
			p=contenido
doctype html
html
	include componentes/head.pug
	body
		header
			h1 PlatziGames
			if usuario 
				a Hola #{usuario}
			else 
				a.boton Registro
		section.intro 
			.intro__imagen: img(src="images/imagen.png")
			.intro__contenido 
				h2 #{titulos[0]}
				p Lorem ipsum dolor
				|sit amet consectetur
				|adipisicing elit.
				span Lorem ipsum dolor sit amet.
				a.boton Leer mas
		main.contenido 
			+caja('imagen.png',titulos[1],'Lorem ipsum dolor')
			+caja('imagen.png',titulos[2],'Lorem ipsum dolor')
			+caja('imagen.png',titulos[3],'Lorem ipsum dolor')
			